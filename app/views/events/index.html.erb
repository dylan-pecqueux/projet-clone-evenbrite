<html>
  <body>
    <div class="jumbotron jumbotron-fluid border-bottom row align-items-start" id="jumbotron-hero" >
      <div class="container-fluid blockquote text-center d-flex justify-content-center">
        <div>
          <h1>Trouver l'événement qui vous correspond</h1>
          <h2 class="text-primary">Grâce à EventBrite</h2>
        </div>
      </div>
    </div>

    <div class="container">
      <h1 class="text-center m-5">Les événements du moment :</h1>
      <div class="row text-center d-flex justify-content-around ">
        <% @event.each_with_index do |event, index| %>
          <div class="card m-2" style="width: 18rem;">
          <%= image_tag event.picture, alt: 'picture', class: "card-img-top"%>
            <div class="card-body">
              <p class="text-primary"> <%= event.start_date %></p>
              <h5 class="card-text"><%= event.title %></h5><br />
              <a class="btn btn-outline-primary" <%= link_to "Voir cet event", event_path(event)%></a>
            </div>
          </div>
          
        <% end %>
      </div>
    </div>

  </body>
</html>
