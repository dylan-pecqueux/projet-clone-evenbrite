
 <div class="container">
      <h1 class="text-center m-5">Les événements pas encore validés :</h1>
      <div class="row text-center d-flex justify-content-around ">
        <%@not_validate.each do |event|%>
          <div class="card m-2" style="width: 18rem;">
          <%= image_tag event.picture, alt: 'picture', class: "card-img-top"%>
            <div class="card-body">
              <p class="text-primary"> <%= event.start_date %></p>
              <h5 class="card-text"><%= event.title %></h5><br />
              <a class="btn btn-outline-primary" <%= link_to "Voir cet event", admin_event_path(event)%></a>
            </div>
          </div>
          
        <% end %>
      </div>
    </div>
