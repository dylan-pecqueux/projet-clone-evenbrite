<!DOCTYPE html>
<html>
  <head>
    <title>ProjetEventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/united/bootstrap.min.css" integrity="sha384-JW3PJkbqVWtBhuV/gsuyVVt3m/ecRJjwXC3gCXlTzZZV+zIEEl6AnryAriT7GWYm" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application'%>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
      <a class="navbar-brand text-primary" href="/">EventBrite</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse " id="navbarColor03">
        <ul class="navbar-nav navbar-center">
          <li class="nav-item">
            <a class="nav-link" href="/">Accueil</a>
          </li>
          <li class="nav-item">
              <a class="nav-link ml-auto p-2" <%= link_to "Créer un event", new_event_path %></a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in?%>
          <li class="ml-auto px-2 text-secondary"><small> Connecté avec l'email : <%=current_user.email%> </small></li>
            <div class="dropdown ml-auto px-2">
              <button class="btn btn-white btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Profil/Sign out
              </button>
            
            <div class="dropdown-menu">
              <a class="nav-link ml-auto p-2" <%= link_to "Sign out", destroy_user_session_path, method: :delete %></a>
              <div class="dropdown-divider"></div>
              <a class="nav-link ml-auto p-2" <%= link_to "Profil", user_path(current_user) %></a>
            </div>
            </div>
            
          <% else %>
            <div class="dropdown ml-auto p-2">
              <button class="btn btn-white btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Sign in/Sign up
              </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="<%=new_user_session_path%>">Sign in</a>
              <a class="dropdown-item" href="<%=new_user_registration_path%>">Sign up</a>
            </div>
          </div>
          <% end %>
          
        </ul>
        </div>
    </nav>

    <%= yield %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
